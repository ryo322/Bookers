<div class= "flash">
 <%= flash[:notice] %>
</div>

<h1>Editing Book</h1>
<%= form_with model: @book do |f| %>

<div class= "edit">
 <p>Title</p>
 <%= f.text_field :title %>
</div>
<div class= "edit">
 <p>Body</p>
 <%= f.text_area :body %>
</div>

<div class= "update">
 <%= f.submit 'Update Book' %>
</div>
 
 <%= link_to "Show", book_path(@book.id) %>
 <%= link_to "Back", '/books' %>
<% end %>
